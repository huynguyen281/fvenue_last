@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | FVenue</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Image/FAVICON.png" />
    <!-- CSS -->
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/regular.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/solid.min.css" />
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />
    <!-- AdminLTE Theme -->
    <link rel="stylesheet" href="~/AdminLTE-CSS/adminlte.min.css" asp-append-version="true" />
    <!-- Date Range Picker -->
    <link rel="stylesheet" href="~/Plugins/daterangepicker/daterangepicker.css" asp-append-version="true" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Plugins/fontawesome-free/css/all.min.css" asp-append-version="true" />
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Plugins/icheck-bootstrap/icheck-bootstrap.min.css" asp-append-version="true" />
    <!-- Overlay Scrollbars -->
    <link rel="stylesheet" href="~/Plugins/overlayScrollbars/css/OverlayScrollbars.min.css" asp-append-version="true" />
    <!-- Summernote -->
    <link rel="stylesheet" href="~/Plugins/summernote/summernote-bs4.min.css" asp-append-version="true" />
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/Plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css" asp-append-version="true" />
    <!-- Kendo UI -->
    <link rel="stylesheet" href="~/KendoUI/kendo.bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KendoUI/kendo.common.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KendoUI/kendo.default-ocean-blue.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KendoUI/kendo.custom.css" asp-append-version="true" />
    <!-- OpenLayers -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ol@v8.2.0/ol.css" type="text/css" />

    <!-- Pre JS -->
    <!-- jQuery -->
    <script src="~/Plugins/jquery/jquery.min.js"></script>
    <!-- Arcgis -->
    <script src=@("https://unpkg.com/@esri/arcgis-rest-request@4.0.0/dist/bundled/request.umd.js")></script>
    <script src=@("https://unpkg.com/@esri/arcgis-rest-routing@4.0.0/dist/bundled/routing.umd.js")></script>
</head>
<body class="hold-transition sidebar-mini layout-fixed layout-footer-fixed layout-navbar-fixed">
    <div class="wrapper">
        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/Image/TAB.png" alt="TAB Logo" height="100" width="100">
        </div>
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left Navbar Links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                </li>
            </ul>
            <!-- Right Navbar Links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Logout", "Home")" role="button">
                        <i class="fa-solid fa-right-from-bracket" style="color: #FF0000;"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- End Navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a class="brand-link" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/Image/FVenue.png" alt="FVenue Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Quản Lý FVenue</span>
            </a>
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar User Panel -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/Image/SuperAdmin.jpg" class="img-circle elevation-2" alt="Administrator Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@HttpContextAccessor?.HttpContext?.Session.GetString("AdministratorName")</a>
                    </div>
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Venues" asp-action="Index">
                                <i class="nav-icon fa-solid fa-location-dot"></i>
                                <p>Địa Điểm</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Accounts" asp-action="Index">
                                <i class="nav-icon fa-regular fa-user"></i>
                                <p>Tài Khoản</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="Index">
                                <i class="nav-icon fa-solid fa-list"></i>
                                <p>Thể Loại</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Schedules" asp-action="Index">
                                <i class="nav-icon fa-regular fa-calendar"></i>
                                <p>Lịch Trình</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Payments" asp-action="Index">
                                <i class="nav-icon fa-solid fa-coins"></i>
                                <p>Giao Dịch</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- End Sidebar Menu -->
            </div>
            <!-- End Sidebar -->
        </aside>
        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <!-- Main Content -->
            @RenderBody()
            <!-- End Main Content -->
        </div>
        <!-- End Content Wrapper -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2023-2024 by FVenue</strong>.
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 1.0.0
            </div>
        </footer>
    </div>

    <!-- JS -->
    <!-- jQuery Knob Chart -->
    <script src="~/Plugins/jquery-knob/jquery.knob.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/Plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <!-- Kendo UI -->
    <script src="~/KendoUI/kendo.all.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- ChartJS -->
    <script src="~/Plugins/chart.js/Chart.min.js"></script>
    <!-- Date Range Picker -->
    <script src="~/Plugins/moment/moment.min.js"></script>
    <script src="~/Plugins/daterangepicker/daterangepicker.js"></script>
    <!-- Overlay Scrollbars -->
    <script src="~/Plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- Summernote -->
    <script src="~/Plugins/summernote/summernote-bs4.min.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/Plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- AdminLTE JS -->
    <script src="~/AdminLTE-CSS/adminlte.js"></script>
    <!-- OpenLayers -->
    <script src="https://cdn.jsdelivr.net/npm/ol@v8.2.0/dist/ol.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/ol-mapbox-style@10.6.0/dist/olms.js" type="text/javascript"></script>
</body>
</html>
