@model DTOs.Models.SubCategory.SubCategoryUpdateDTO

<div class="modal show display-popup" id="myModal" role="dialog" style="font-size: 15px">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content" style="padding: 10px;">
            <form asp-controller="SubCategories" asp-action="UpdateSubCategory" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                </div>
                <div class="modal-body" style="max-height: 500px; overflow-y: scroll;">
                    <div class="row">
                        <div class="col-md-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" value="@Model.Id" />
                            <div class="k-label k-form-label k-form-field">
                                <label class="k-label k-form-label" asp-for="Name"></label>
                                <div class="k-form-field-wrap">
                                    <span class="k-input k-textbox k-input-solid k-input-md k-rounded-md">
                                        <input style="width: 100%" class="k-input-inner" type="text" asp-for="Name" value="@Model.Name" />
                                    </span>
                                </div>
                            </div>
                            <div class="k-label k-form-label k-form-field">
                                <label class="k-label k-form-label" asp-for="CategoryId"></label>
                                <div class="k-form-field-wrap">
                                    <input id="categoriesDropDownList" asp-for="CategoryId" value="@Model.CategoryId" />
                                </div>
                            </div>
                            <input type="hidden" asp-for="CreateDate" value="@Model.CreateDate" />
                            <input type="hidden" asp-for="LastUpdateDate" value="@Model.LastUpdateDate" />
                            <input type="hidden" asp-for="Status" value="@Model.Status" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input style="font-size: 14px" type="submit" value="Save" class="btn btn-primary" />
                    <button style="font-size: 14px" id="removePopup" type="button" class="btn btn-secondary">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
