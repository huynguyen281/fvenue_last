@model DTOs.Models.Venue.VenueUpdateDTO

<div class="modal show display-popup" id="myModal" role="dialog" style="font-size: 15px">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content" style="padding: 10px;">
            <form asp-controller="Venues" asp-action="UpdateVenue" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                </div>
                <div class="modal-body" style="max-height: 500px; overflow-y: scroll;">
                    <div class="row">
                        <div class="col-md-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" value="@Model.Id" />
                            <div class="k-label k-form-label k-form-field">
                                <label class="k-label k-form-label" asp-for="Name"></label>
                                <div class="k-form-field-wrap">
                                    <span class="k-input k-textbox k-input-solid k-input-md k-rounded-md">
                                        <input class="k-input-inner" type="text" asp-for="Name" value="@Model.Name" />
                                    </span>
                                </div>
                            </div>
                            <div class="k-label k-form-label k-form-field">
                                <label class="k-label k-form-label" asp-for="Image"></label>
                                <div class="k-form-field-wrap">
                                    <div style="display: flex;">
                                        <div class="kendo-cell-photo" style="background-image: url(@Model.ImageURL);"></div>
                                        <div style="flex-grow: 1">
                                            <span class="k-input k-textbox k-input-solid k-input-md k-rounded-md">
                                                <input class="k-input-inner" type="file" asp-for="Image" />
                                            </span>
                                        </div>
                                    </div>
                                    <div class="k-form-hint">
                                        <span>Chọn ảnh đúng định dạng.</span>
                                    </div>
                                </div>
                            </div>
                            <div class="k-label k-form-label k-form-field">
                                <label class="k-label k-form-label" asp-for="Street"></label>
                                <div class="k-form-field-wrap">
                                    <span class="k-input k-textbox k-input-solid k-input-md k-rounded-md">
                                        <input class="k-input-inner" type="text" asp-for="Street" value="@Model.Street" />
                                    </span>
                                </div>
                            </div>
                            <div class="k-label k-form-label k-form-field">
                                <label class="k-label k-form-label" asp-for="WardId"></label>
                                <div class="k-form-field-wrap">
                                    <input id="wardsDropDownList" asp-for="WardId" value="@Model.WardId" />
                                </div>
                            </div>
                            <div class="k-label k-form-label k-form-field">
                                <label class="k-label k-form-label" asp-for="GeoLocation"></label>
                                <div class="k-form-field-wrap">
                                    <span class="k-input k-textbox k-input-solid k-input-md k-rounded-md">
                                        <input class="k-input-inner" type="text" asp-for="GeoLocation" value="@Model.GeoLocation" />
                                    </span>
                                    <div class="k-form-hint">
                                        <span>Đúng định dạng: vĩ độ,kinh độ.</span>
                                    </div>
                                </div>
                            </div>
                            <div style="display: flex; justify-content: space-between;">
                                <div class="k-label k-form-label k-form-field" style="width: 45%">
                                    <label class="k-label k-form-label" asp-for="OpenTime"></label>
                                    <div class="k-form-field-wrap">
                                        <span class="k-input k-textbox k-input-solid k-input-md k-rounded-md">
                                            <input class="k-input-inner" type="time" asp-for="OpenTime" value="@Model.OpenTime" />
                                        </span>
                                    </div>
                                </div>
                                <div class="k-label k-form-label k-form-field" style="width: 45%">
                                    <label class="k-label k-form-label" asp-for="CloseTime"></label>
                                    <div class="k-form-field-wrap">
                                        <span class="k-input k-textbox k-input-solid k-input-md k-rounded-md">
                                            <input class="k-input-inner" type="time" asp-for="CloseTime" value="@Model.CloseTime" />
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="k-label k-form-label k-form-field">
                                <label class="k-label k-form-label" asp-for="AccountId"></label>
                                <div class="k-form-field-wrap">
                                    <input id="administratorsDropDownList" asp-for="AccountId" value="@Model.AccountId" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input style="font-size: 14px" type="submit" value="Save" class="btn btn-primary" />
                    <button style="font-size: 14px" id="removePopup" type="button" class="btn btn-secondary">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
